      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 17
      },
      "id": 6,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "chat_backend_process_resident_memory_bytes{environment=\"$environment\"}",
          "legendFormat": "RSS {{instance}}",
          "refId": "A"
        }
      ],
      "title": "Process RSS",
      "type": "timeseries"
    }
