    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "max by (instance) (ws_connections{environment=\"$environment\"})",
          "legendFormat": "{{instance}}",
          "refId": "A"
        },
        {
          "exemplar": true,
          "expr": "sum(ws_connections{environment=\"$environment\"})",
          "legendFormat": "fleet",
          "refId": "B"
        }
      ],
      "title": "Active WS Connections (instance & fleet)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(message_throughput_total{environment=\"$environment\"}[1m])) by (type)",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "title": "Message Throughput (1m rate)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 250
              },
              {
                "color": "red",
                "value": 350
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 3,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(delivery_latency_ms_bucket{environment=\"$environment\",event=\"send\"}[5m])) by (le))",
          "legendFormat": "send p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(delivery_latency_ms_bucket{environment=\"$environment\",event=\"send\"}[5m])) by (le))",
          "legendFormat": "send p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(delivery_latency_ms_bucket{environment=\"$environment\",event=\"send\"}[5m])) by (le))",
          "legendFormat": "send p99",
          "refId": "C"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(delivery_latency_ms_bucket{environment=\"$environment\",event=\"history\"}[5m])) by (le))",
          "legendFormat": "history p95",
          "refId": "D"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(delivery_latency_ms_bucket{environment=\"$environment\",event=\"history\"}[5m])) by (le))",
          "legendFormat": "history p99",
          "refId": "E"
        }
      ],
      "title": "Delivery Latency (p50/p95/p99)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.08
              },
              {
                "color": "red",
                "value": 0.1
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 4,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(error_total{environment=\"$environment\"}[5m])) / sum(rate(message_throughput_total{environment=\"$environment\",type=~\"send|history|delivered\"}[5m]))",
          "legendFormat": "error rate",
          "refId": "A"
        },
        {
          "expr": "sum(rate(error_total{environment=\"$environment\"}[5m])) by (event)",
          "legendFormat": "{{event}}",
          "refId": "B"
        }
      ],
      "title": "Error Rate & Class Breakdown",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 17
      },
      "id": 5,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "rate(chat_backend_process_cpu_seconds_total{environment=\"$environment\"}[5m])",
          "legendFormat": "CPU {{instance}}",
          "refId": "A"
        }
      ],
      "title": "Process CPU (5m avg)",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${PROM_DS_UID}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
