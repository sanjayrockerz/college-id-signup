{
  "name": "chat-backend",
  "version": "2.0.0",
  "description": "Anonymous public chat backend - Transport and persistence microservice for real-time messaging with REST and Socket.IO APIs. No authentication required; explicit userId in requests.",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --config ./test/integration/jest.config.json",
    "test:load": "ts-node test/load/run-load-tests.ts",
    "test:load:history": "ts-node test/load/run-load-tests.ts --scenario=messageHistory",
    "test:load:send": "ts-node test/load/run-load-tests.ts --scenario=messageSend",
    "test:load:mixed": "ts-node test/load/run-load-tests.ts --scenario=mixed",
    "test:load:spike": "ts-node test/load/run-load-tests.ts --scenario=spike",
    "test:chaos": "jest --config ./test/chaos/jest.config.json",
    "canary:message-history": "ts-node scripts/canary/canary-deployment.ts --config=messageHistory",
    "canary:conversation-list": "ts-node scripts/canary/canary-deployment.ts --config=conversationList",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "prepare": "husky install",
    "openapi:lint": "@redocly/cli lint docs/contracts/openapi.yaml",
    "perf:seed-data": "ts-node --transpile-only scripts/performance/db-analysis/seed-performance-data.ts",
    "perf:query-analyzer": "ts-node --transpile-only scripts/performance/db-analysis/query-analyzer.ts",
    "perf:index-stats": "python3 scripts/performance/db-analysis/psql_timeout_runner.py --no-pager --on-error-stop --timeout ${PSQL_TIMEOUT:-30} --dsn \"${DATABASE_URL}\" --file scripts/performance/db-analysis/index-stats.sql",
    "db:baseline:capture": "ts-node scripts/performance/db-baseline/capture-baseline.ts",
    "db:baseline:indexes": "psql \"${DATABASE_URL}\" -f scripts/performance/db-baseline/02-index-design.sql",
    "db:baseline:denormalize": "psql \"${DATABASE_URL}\" -f scripts/performance/db-baseline/03-denormalize-unread-counts.sql",
    "ci:verify-prod-flags": "ts-node --transpile-only scripts/ci/check-forbidden-prod-flags.ts",
    "ci:validate-telemetry": "ts-node --transpile-only scripts/ci/validate-metric-labels.ts"
  },
  "_deprecated_scripts_comment": "Legacy Express scripts removed 2025-10-20. See src/deprecated/README.md for migration info.",
  "_deprecated_scripts": {
    "start_old": "node src/server.js",
    "dev_old": "nodemon src/server.js",
    "serve:quick_old": "node src/simple-server.js",
    "start:express_old": "node src/app.js",
    "start:express:dev_old": "nodemon src/app.js",
    "start:server_old": "node src/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.7",
    "@nestjs/websockets": "^11.1.7",
    "@prisma/client": "^5.22.0",
    "@socket.io/redis-adapter": "^8.2.0",
    "@socket.io/redis-emitter": "^5.1.0",
    "@types/ioredis": "^4.28.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "jose": "^5.3.0",
    "multer": "^1.4.5-lts.1",
    "node-tesseract-ocr": "^2.2.1",
    "prisma": "^5.22.0",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.2",
    "socket.io": "^4.7.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.3",
    "@types/autocannon": "^7.12.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autocannon": "^7.15.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "ioredis-mock": "^5.6.1",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "redis-commands": "^1.7.0",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
